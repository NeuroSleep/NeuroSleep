<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="125dp"
        android:gravity="top"
        android:text="Sleep Analysis"
        android:textColor="#0445d1"
        android:textSize="20dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="40dp"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_analysis"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="407dp"></com.github.mikephil.charting.charts.LineChart>

    <Button
        android:id="@+id/coaching_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Results" />

</LinearLayout>